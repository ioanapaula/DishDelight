<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="category"
            type="com.example.dishdelight.data.Category" />
    </data>
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="4dp"
        app:cardMaxElevation="8dp"
        app:cardPreventCornerOverlap="true"
        app:useCompatPadding="true">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/category_image"
                android:layout_width="128dp"
                android:layout_height="80dp"
                android:layout_alignParentStart="true"
                android:layout_marginEnd="@dimen/spacing_xs"
                android:layout_marginVertical="@dimen/spacing_s"
                android:scaleType="centerCrop"/>
            <TextView
                android:id="@+id/category_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/category_image"
                android:layout_alignTop="@id/category_image"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold"
                android:text="@{category.title}"/>
            <TextView
                android:id="@+id/category_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/category_image"
                android:layout_alignBottom="@id/category_image"
                android:layout_marginEnd="@dimen/spacing_s"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:maxLines="3"
                android:ellipsize="end"
                android:text="@{category.details}"/>
        </RelativeLayout>
    </com.google.android.material.card.MaterialCardView>
</layout>